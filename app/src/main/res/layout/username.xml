<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/less_dark"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/less_dark"
        android:id="@+id/headerWrap"
        android:layout_height="?android:actionBarSize"
        android:weightSum="5"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/custom_bg"
            android:onClick="BackPressed"
            >
            <ImageView
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_weight="3"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Last thing "
                android:id="@+id/headerUsername"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="22sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/custom_bg"
            android:onClick="register"
            >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/tick"
                />
        </RelativeLayout>

    </LinearLayout>

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:hint="Enter your roll number"
        android:id="@+id/roll_no"
        android:textColor="@color/icons"
        android:layout_below="@+id/headerWrap"
        android:textColorHint="@color/icons"
        android:layout_margin="20dp"

        />
    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:hint="Enter your section"
        android:id="@+id/section"
        android:textColor="@color/icons"
        android:layout_below="@+id/roll_no"
        android:textColorHint="@color/icons"
        android:layout_margin="20dp"

        />

</RelativeLayout>