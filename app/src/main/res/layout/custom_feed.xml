<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageX"
            android:adjustViewBounds="true"
            android:src="@drawable/actbadminton"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line"
        android:padding="10dp"
        android:background="@drawable/psi_end"
        android:layout_alignBottom="@+id/imageX"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textSize="38dp"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:layout_below="@+id/imageX"
                android:text="name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/icons"
                android:layout_below="@+id/name"
                android:id="@+id/from"
                android:text="6pm - "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7pm"
                android:id="@+id/to"
                android:textColor="@color/icons"
                android:layout_alignTop="@+id/from"
                android:layout_toRightOf="@+id/from"
                android:layout_toEndOf="@+id/from" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/to"
                android:id="@+id/venue"
                android:text="Kiit"
                android:textColor="@color/icons"
                android:layout_height="wrap_content"
                />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="About"
               android:id="@+id/about"
               android:textColor="@color/icons"
               android:layout_below="@+id/venue"
               />
    </RelativeLayout>
</RelativeLayout>